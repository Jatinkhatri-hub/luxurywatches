{
  "name": "Whitespace",
  "settings": [
    {
      "type": "select",
      "id": "whitespace_mobile",
      "label": "Whitespace Mobile",
      "default": "h-5",
      "options": [
        {
          "value": "h-5",
          "label": "20px"
        },
        {
          "value": "h-6",
          "label": "24px"
        },
        {
          "value": "h-10",
          "label": "40px"
        }
      ]
    },
    {
      "type": "select",
      "id": "whitespace_tablet",
      "label": "Whitespace Tablet",
      "default": "md:h-10",
      "options": [
        {
          "value": "md:h-5",
          "label": "20px"
        },
        {
          "value": "md:h-6",
          "label": "24px"
        },
        {
          "value": "md:h-10",
          "label": "40px"
        }
      ]
    },
    {
      "type": "select",
      "id": "whitespace_desktop",
      "label": "Whitespace Desktop",
      "default": "lg:h-20",
      "options": [
        {
          "value": "lg:h-5",
          "label": "20px"
        },
        {
          "value": "lg:h-6",
          "label": "24px"
        },
        {
          "value": "lg:h-10",
          "label": "40px"
        },
        {
          "value": "lg:h-20",
          "label": "80px"
        },
        {
          "value": "lg:h-36",
          "label": "144px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Whitespace"
    }
  ]
}
{% endschema %}

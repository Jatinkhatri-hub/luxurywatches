{%- liquid
  assign s = section.settings
-%}

<div class='container-full grid-desktop'>
  <{{ s.title_tag }}
    class='gradient-heading text-heading-4 font-bold'
  >
    {{- s.title -}}
  </{{ s.title_tag }}>

  <div class='grid-desktop col-span-full gap-2 lg:gap-5'>
    {%- for product in s.products -%}
      <div class='relative col-span-10 flex flex-col rounded bg-grey lg:col-span-4'>
        <a href='{{- product.url -}}' class='absolute inset-0 z-10'></a>
        {%- render 'component.image', image: product.featured_image -%}

        <div class='bg-grey p-3 text-body-xs lg:p-5 lg:text-body'>
          <h3 class='text-content mb-2 font-body'>{{- product.title -}}</h3>
          <p class='font-heading text-body-sm font-bold tracking-normal text-accent'>
            {{- product.price | money_without_trailing_zeros -}}
          </p>
        </div>
      </div>
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Products grid",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "Title tag",
      "default": "h2",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        },
        {
          "value": "p",
          "label": "Paragraph"
        }
      ]
    },
    {
      "type": "product_list",
      "id": "products",
      "label": "Product list"
    }
  ],
  "presets": [
    {
      "name": "Products grid"
    }
  ]
}
{% endschema %}
